    },
    "tasks": [
      {
        "toolName": "RESTler",
        "outputFolder": "{defaults.deploymentName}-compile",

        "toolConfiguration": {
          "task": "Compile",
          "compileConfiguration": {
            "useRefreshableToken": true
          }
        }
      },
      {
        "toolName": "RESTler",
        "outputFolder": "sample-compile",
        "testTargetConfiguration" : {
          "apiSpecifications": ["https://{sample.host}/swagger/v1/swagger.json"]
        },
        "toolConfiguration": {
          "task": "Compile"
        }
      }
    ]
  }
}
