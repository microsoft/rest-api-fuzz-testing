{
  "host": "localhost",
  "webhook": {
    "name": "petstore",
    "metadata": {
      "app" : "petstore",
      "swagger_version" : "v2",
      "action" : "fuzz"	
    }
  },

  "resources": {
    "Cores": 4,
    "MemoryGBs": 8
  },

  "readonlyFileShareMounts": [
    {
      "FileShareName": "{compile.jobId}",
      "MountPath": "/job-compile"
    }
  ],

 "testTargets" : { 
    "resources" : {
      "Cores" : 2,
      "MemoryGBs" : 4
    },
    "targets" : [
      {
        "Container" : "swaggerapi/petstore",
        "Port" : 8080,
        "StartDuration" : "00:00:30",
        "Shell" : "/bin/sh",
        "OutputFolder" : "petstore",
        "PostRun" : {
          "Command" : "/bin/sh", 
          "Arguments" : ["-c", "cp /var/log/*-requests.log $RAFT_WORK_DIRECTORY"],
          "TimeoutDuration" : "00:00:10"
        }
      }
    ]
  },
  "tasks": [
    {
      "toolName": "RESTler",
      "outputFolder": "fuzz",
      "duration": "00:10:00",
      "toolConfiguration": {
        "task": "Fuzz",
        "runConfiguration": {
          "targetEndpointConfiguration" : {
            "Port" : 8080 
          },
          "useSsl" : false,
          "inputFolderPath": "/job-compile/compile"
        }
      }
    },
    {
      "swaggerLocation": {
        "URL" : "http://localhost:8080/api/swagger.json"
      },
      "toolName": "ZAP",
      "outputFolder": "zap"
    }
  ]
}
